<div class="row">
	<div class="col-lg-12">
		<h2>Adverse Event Reports by Manufacturers</h2>
		<form role="form" class="form-inline">
			<div class="form-group">
				<%= select_tag "startYear", options_for_select($yearList, :selected=>params[:startYear]), {:onchange => "this.form.submit();", :prompt => "Select year" } %>
			</div>
			<div class="form-group">
				<%= select_tag "mfr", options_for_select($mfrList, :selected=>params[:mfr]), {:onchange => "this.form.submit();", :prompt => "Select Manufacturer", :class => "col-md-6" } %>
			</div>
		</form>
	</div>
</div>
<div class="row">
	<div class="col-md-6 img-portfolio">
		<div class="contentsbox">
			<h3>Device Types</h3>
			<%= pie_chart "/enforcements/reports?type=advbymfr&startYear=" + @startYear+ "&mfr=" + @mfr, discrete: true %>
		</div>
	</div>
	<div class="col-md-6 img-portfolio">
		<div class="contentsbox">
			<h3>Seriousness of Adverse Event caused by Device Name</h3>
			<%= pie_chart "/enforcements/reports?type=advbytype&startYear=" + @startYear+ "&mfr=" + @mfr, discrete: true %>
		</div>
	</div>
</div>
