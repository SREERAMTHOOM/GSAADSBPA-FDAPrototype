<main class="content">
	<div class="slider">
		<ul class="slides">
			<li>
				<div class="container">                     
					<div class="slide-caption">
						<small class="slide-subtitle">Adverse Events & Enforcement Reports for Medical Devices</small>
						<div class="slide-summary">
						</div>
					</div>
				</div>
			</li>
		</ul> <!-- .slides -->
	</div> <!-- .slider -->

	
	<div class="fullwidth-block about-section">

		<div class="container">

			<div class="row">

				<div class="col-md-6 wow fadeInUp">
					<h2>Latest Adverse Events</h2>
					
					<div class="boxer">
						<div class="box-row">
							<div class="box">Event Type</div>
							<div class="box">MDR key </div>
							<div class="box">Device</div>
							<div class="box">Event</div>
						</div>
					<% $advEvents.each_with_index do |result, index| %>
						<div class="box-row1">
							<div class="box"><%= result["event_type"] %></div>
							<div class="box"><%= result["mdr_text"][0]["mdr_text_key"] %></div>
							<div class="box"><%= result["patient"][0]["date_received"] %></div>
							<div class="box"><%= result["device"][0]["device_event_key"] %></div>
						</div>
					<% end %>
					</div>

					<a href="" class="button">Read More</a><br>
					<%= line_chart "/enforcements/devicereport?type=device", discrete: true %>
					<h3>Graph showing Total Adverse Events Reported So Far Ordered by Years</h3>
				</div>

				<div class="col-md-6 wow fadeInUp">
					<h2>Latest Enforcement Reports</h2>
					
					<div class="boxer">
						<div class="box-row">
							<div class="box">Event Id</div>
							<div class="box">Product Type </div>
							<div class="box">Report Date</div>
							<div class="box">CodeInfo</div>
						</div>
					<% $enfEvents.each_with_index do |result, index| %>
						<div class="box-row1">
							<div class="box"><%= result["event_id"] %></div>
							<div class="box"><%= result["product_type"] %></div>
							<div class="box"><%= result["report_date"] %></div>
							<div class="box"><%= result["code_info"][0...10] %></div>
						</div>
					<% end %>
					</div>

					<a href="" class="button">Read More</a><br>
					<%= line_chart "/enforcements/devicereport?type=enf", discrete: true %>
					<h3>Graph showing Total Enforcement Reports Reported So Far Ordered by Years</h3>
				</div>


			</div> <!-- .row -->

		</div> <!-- .container -->
	</div> <!-- .fullwidth-block -->
</main> <!-- .content -->
