<div class="row">
	<div class="col-md-6 img-portfolio">
		<div class="contentsbox">
			<h2>Latest Adverse Event</h2>
			<table class="boxer">
				<thead >
					<tr class="box-row">
						<th class="box">Date</th>
						<th class="box">Manufacturer</th>
						<th class="box">Device</th>
						<th class="box">Event</th>
					</tr>
				</thead>
				<tbody>
				<% @advEvents.each_with_index do |result, index| %>
					<tr class="box-row1">
						<td class="box"><%= result["date_of_event"] %></td>
						<td class="box"><%= result["manufacturer_name"][0...10] + "..."  %></td>
						<td class="box"><%= result["device"][0]["generic_name"][0...10] + "..." %></td>
						<td class="box"><%= result["event_type"] %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<div class="col-md-6 img-portfolio">
		<h2>Latest Enforcement Reports</h2>
			<table class="boxer">
				<thead class="box-row">
					<tr>
						<th class="box2">Date</th>
						<th class="box2">Manufacturer</th>
						<th class="box2">Status</th>
						<th class="box2">Classification</th>
					</tr>
				</thead>
				<tbody class="box-row1">
				<% @enfEvents.each_with_index do |result, index| %>
					<tr >
						<td class="box2"><%= result["recall_initiation_date"] %></td>
						<td class="box2"><%= result["recalling_firm"] %></td>
						<td class="box2"><%= result["status"] %></td>
						<td class="box2"><%= result["classification"] %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<!-- .row -->